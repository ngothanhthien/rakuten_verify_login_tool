{
  "name": "rakuten",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx main.ts",
    "build": "npm run build:frontend && npm run build:backend && npm run prisma:generate",
    "build:backend": "tsc && ./fix-esm-imports.sh",
    "build:frontend": "cd frontend && npm install && npm run build-only && cd .. && rm -rf frontend-dist && mv frontend/dist frontend-dist",
    "start": "npm run prisma:migrate && node dist/main.js",
    "start:dev": "tsx main.ts",
    "prisma:generate": "prisma generate --schema=./infrastructure/db/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy --schema=./infrastructure/db/prisma/schema.prisma",
    "build:standalone": "tsx build.ts",
    "package:windows": "npm run build:frontend && npm run prisma:generate && tsx build.ts --zip",
    "prisma:migrate:dev": "prisma migrate dev --schema=./infrastructure/db/prisma/schema.prisma",
    "prisma:seed": "prisma db seed --schema=./infrastructure/db/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./infrastructure/db/prisma/schema.prisma",
    "postinstall": "npm run prisma:generate",
    "migrate-rat": "tsx scripts/migrate-rat-from-gist.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "prisma": {
    "seed": "node infrastructure/db/prisma/seed.mjs"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "5.22.0",
    "awilix": "^10.0.0",
    "awilix-express": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "geoip-lite": "^1.4.10",
    "multer": "^1.4.5-lts.1",
    "node-telegram-bot-api": "^0.66.0",
    "patchright": "^1.0.0",
    "prisma": "5.22.0",
    "user-agents": "^1.1.669",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/geoip-lite": "^1.4.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/node-telegram-bot-api": "^0.64.12",
    "@types/pg": "^8.15.6",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.1",
    "fs-extra": "^11.3.2",
    "tsup": "^8.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
